<h1>New Game</h1>

<p>What is the longest word you can find?</p>

<div class="d-flex align-items-start">
  <% @letters.each do |letter| %>
      <div class="letter">
        <%=letter%>
      </div>
  <%end%>
</div>

<p></p>

<form action="score" method="post" data-turbo="false" class="row g-2">
  <div class="col-auto">
    <input type="text" name="word" class="form-control">
  </div>
  <div class="col-auto">
    <input type="submit" class="btn btn-primary mb-3" value="Play!">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
